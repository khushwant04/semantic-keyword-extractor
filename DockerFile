# Stage 1: Build
FROM python:3.10-slim AS builder

WORKDIR /app

# Install build tools & download wheels
COPY requirements.txt .
RUN pip install --upgrade pip \
 && pip wheel --no-cache-dir --wheel-dir /wheels -r requirements.txt

# Stage 2: Final Image
FROM python:3.10-slim

WORKDIR /app

# System dependencies for spacy/nltk
RUN apt-get update && apt-get install -y \
    gcc g++ libffi-dev libxml2-dev libxslt-dev libz-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set env for nltk data path
ENV NLTK_DATA=/usr/local/nltk_data

# Pre-download NLTK and spaCy models
RUN mkdir -p /usr/local/nltk_data \
 && python -m pip install --upgrade pip

# Copy wheels and install
COPY --from=builder /wheels /wheels
COPY requirements.txt .
RUN pip install --no-cache-dir --no-index --find-links=/wheels -r requirements.txt

# Redownload NLTK data cleanly
RUN rm -rf /usr/local/nltk_data/tokenizers/punkt && \
    python -m nltk.downloader punkt stopwords -d /usr/local/nltk_data

# Download the spacy model AFTER installing spaCy
RUN python -m spacy download en_core_web_sm

# Pre-load sentence-transformers model
RUN python -c "from sentence_transformers import SentenceTransformer; SentenceTransformer('all-MiniLM-L6-v2')"

# Copy app code
COPY . .

EXPOSE 8080
CMD ["python", "app.py"]
